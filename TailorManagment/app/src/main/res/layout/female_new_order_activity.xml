<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tajmirkhan.tailormanagment.FemaleNewOrder">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_id"
        android:background="#de18b6f2"
        app:theme="@style/MyToolbarTheme"
        app:popupTheme="@style/MypopUpTheme"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.50"
                    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                    android:layout_margin="1dp"
                    android:padding="5dp"
                    app:cardCornerRadius="3dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textview_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pleas select the user"
                            android:textColor="#000000"
                            android:textSize="14dp" />
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/textview_id"
                            android:id="@+id/pant_shalwar_rdg_id"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PantShirt"
                                android:textColor="#787676"
                                android:id="@+id/shirt_rdbtn_id"
                                />
                            <RadioButton
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ShalwarKameez"
                                android:textColor="#787676"
                                android:id="@+id/shalwar_rdbtn_id"
                                />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/id_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pant_shalwar_rdg_id"
                            android:text="" />

                        <TextView
                            android:id="@+id/name_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/id_id"
                            android:text=""
                            />

                        <Button
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/textview_id"
                            android:id="@+id/select_user_btn_id"
                            android:background="@drawable/ic_action_edit" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:layout_marginTop="5dp"
                >
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="3dp"
                    android:layout_weight="1.50"
                    android:padding="5dp"
                    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#adede1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select The Design"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.50dp"
                            android:background="#787676"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:id="@+id/design_image_id"
                                />
                            <Button
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/ic_action_edit"
                                android:id="@+id/design_select_btn_id"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:layout_marginTop="5dp"

                >
                <android.support.v7.widget.CardView

                    app:cardCornerRadius="3dp"
                    android:layout_weight="1.50"
                    android:padding="5dp"
                    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#adede1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textSize="14dp"
                                android:textColor="#787676"
                                android:hint="Enter Prise"
                                android:id="@+id/prise_edt_id"
                                android:inputType="numberDecimal"
                                />

                        </android.support.design.widget.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            >
                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                >
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14dp"
                                    android:textColor="#787676"
                                    android:id="@+id/quantity_edt_id"
                                    android:hint="Enter Qunatity On Order"
                                    android:inputType="number"
                                    />


                            </android.support.design.widget.TextInputLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/total_cost_female_txv"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="total cost is"
                                />

                        </LinearLayout>





                    </LinearLayout>
                </android.support.v7.widget.CardView></RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:layout_marginTop="5dp"
                >

                <android.support.v7.widget.CardView
                    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                    android:layout_margin="1dp"
                    android:layout_weight="1.50"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#adede1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:text="Curent Time Date"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/current_time_txv_id"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                >
                <android.support.v7.widget.CardView
                    android:layout_weight="1.50"
                    android:padding="5dp"
                    app:cardCornerRadius="3dp"
                    android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#adede1"
                    >
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="14dp"
                            android:text="select Delivery Time"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            >



                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="datetime"
                                android:id="@+id/time_edt_id"
                                android:layout_weight="6"
                                android:textColor="#787676"

                                />



                            <Button
                                android:id="@+id/time_btn_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:background="@drawable/ic_action_time"
                                />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"

                            android:weightSum="10"
                            >




                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textStyle="bold"
                                android:layout_weight="6"
                                android:id="@+id/date_edt_id"
                                android:lines="1"
                                android:textSize="14dp"
                                android:textColor="#787676"

                                />



                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:id="@+id/date_btn_id"
                                android:background="@drawable/ic_action_date"
                                />

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <android.support.v7.widget.CardView
                app:cardCornerRadius="3dp"
                android:paddingBottom="@dimen/cardview_compat_inset_shadow"
                android:layout_margin="1dp"
                android:layout_weight="1.50"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#adede1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    >
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:id="@+id/cancel_btn_id"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        ></LinearLayout>


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/save_all_record_btn_id"
                        android:text="save"
                        android:layout_weight="1"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
