<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.tajmirkhan.tailormanagment.InsertNewCustomerMale"
    android:background="#de18b6f2"

    >
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_id"
        android:background="#de18b6f2"
        app:theme="@style/MyToolbarTheme"
        app:popupTheme="@style/MypopUpTheme"

        >

    </android.support.v7.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

    <android.support.v7.widget.CardView

        app:cardCornerRadius="3dp"
        android:layout_weight="1.50"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#adede1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:weightSum="5"
            android:gravity="center"
            >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/userinformationicon"

    />


        </LinearLayout>


    </android.support.v7.widget.CardView>









    <android.support.v7.widget.CardView

        app:cardCornerRadius="3dp"
        android:layout_weight="1.50"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#de18b6f2"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:weightSum="5"
            >

            <ImageView
                android:id="@+id/us"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/useridicon"

                android:layout_weight="1"
                android:layout_margin="3dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter User ID"
                    android:id="@+id/userid_male_edt_id"
                android:inputType="number"
                    />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:weightSum="5"
                >

                <ImageView
                    android:id="@+id/uss"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/usernameicon"
                    android:layout_weight="1"
                    android:layout_margin="3dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter USer Name"
                        android:id="@+id/username_male_edt_id"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:weightSum="5"
                >

                <ImageView
                    android:id="@+id/usss"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/phonenumbericon"
                    android:layout_weight="1"
                    android:layout_margin="3dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    >
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Phone Number"
                        android:inputType="number"
                        android:id="@+id/phone_male_edt_id"
                  android:maxLength="11"
                        />

                </android.support.design.widget.TextInputLayout>



            </LinearLayout>





        </LinearLayout>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView

        app:cardCornerRadius="3dp"
        android:layout_weight="2"
        android:layout_margin="5dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:weightSum="5"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.50"
                ></LinearLayout>
            <Button
                android:layout_weight=".50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:id="@+id/nextbtn_id"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>



    </LinearLayout>

</ScrollView>


</LinearLayout>
